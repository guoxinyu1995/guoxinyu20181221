<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/sweep"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/custom"
        app:layout_constraintBottom_toBottomOf="@id/custom"
        android:src="@drawable/sweep"
        />
    <com.bwie.guoxinyu.custom.CustomView
        android:id="@+id/custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/sweep"
        app:layout_constraintTop_toTopOf="@id/sweep"
        app:layout_constraintBottom_toBottomOf="@id/sweep"
       app:layout_constraintRight_toLeftOf="@id/switch1"
        android:background="@drawable/edit_shape"
        />
    <ImageView
        android:id="@+id/switch1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/custom"
        app:layout_constraintBottom_toBottomOf="@id/custom"
        android:src="@drawable/ic_list_name"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/custom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/recycle_grid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>